# X Deploy Bot - Environment Variables
# Copy this to .env and fill in your values

# ============ Bot Wallet ============
# CRITICAL: Keep this secure! Never commit to git.
BOT_PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ============ X (Twitter) API ============
# Get these from https://developer.twitter.com/
X_API_KEY=your_api_key
X_API_SECRET=your_api_secret
X_BEARER_TOKEN=your_bearer_token
X_ACCESS_TOKEN=your_access_token
X_ACCESS_SECRET=your_access_secret
X_BOT_USERNAME=mybot

# ============ Database ============
DATABASE_URL=postgresql://user:password@localhost:5432/xdeploybot

# ============ Redis ============
REDIS_URL=redis://localhost:6379

# ============ Blockchain ============
RPC_URL=https://mainnet.base.org
CHAIN_ID=8453

# Contract addresses (fill after deployment)
TOKEN_FACTORY_ADDRESS=
FEE_HOOK_ADDRESS=
ORCHESTRATOR_ADDRESS=

# Base network addresses
WETH_ADDRESS=0x4200000000000000000000000000000000000006
POOL_MANAGER_ADDRESS=0x498581ff718922c3f8e6a244956af099b2652b2b

# ============ Configuration ============
# Deploy fee in wei (default: 0.0005 ETH = 500000000000000 wei)
DEPLOY_FEE_WEI=500000000000000

# ============ Server ============
PORT=3000
NODE_ENV=development
